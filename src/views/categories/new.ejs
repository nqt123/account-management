<div class="page-content page-container" id="page-content">
    <form method="POST" action="/categories">
        <div class="form-inline">
            <div class="form-group mb-2">
                <label for="categoryLabel" class="sr-only">Category Label</label>
                <input type="text" readonly class="form-control-plaintext" id="categoryLabel" value="Category name">
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <label for="categoryName" class="sr-only">Category Name</label>
                <input type="text" class="form-control" name="name" id="categoryName" placeholder="Fill name here">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Create Category</button>
        </div>
    </form>
    <button type="button" onclick="history.back()" class="btn btn-danger mb-2">Go Back</button>
</div>